html {
  top: 0 !important;
}

body {
  background: #fff;
  border-top: 4px solid #ad141e;
  color: #444;
  font-family: $serif, serif;
  font-size: 1rem;
  line-height: 1.7rem;
  text-rendering: optimizeLegibility;
}

iframe#tumblr_controls {
  display: none;
}

section#container {
  @include clearfix();
  @include fill-parent();
  margin: 0 auto;
  padding: 0 1.5rem;
}

header {
  @include clearfix();
  margin: 3rem 0;

  h2.logo {
    text-align: center;

    a {
      height: 85px;
      width: 85px;
    }
  }

  hgroup {
    margin: 1rem 0 0;
    text-align: center;

    h2 {
      font: 700 1rem/1.4em $sans-serif;
      margin: 0 0 .5rem 0;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    h2 a {
      color: #333;
      font-weight: 700;
      text-decoration: none;

      &:hover {
        color: $red;
      }
    }

    h3 {
      color: #999;
      font: 400 1rem/1em $subhead;
      font-style: italic;
    }

    h3 a {
      color: #777;
      font-weight: 400;
      text-decoration: none;

      &:hover {
        text-decoration: underline;
      }
    }
  }
}

.post {
  @include fill-parent();
  margin: 0;
  padding: 0 0 3rem;

  &.mini-post {
    padding-bottom: 1rem;

    h1.title, h1.title a {
      font-size: 1rem;
      line-height: 1.7rem;
      margin-bottom: 0;
    }
  }

  &.quote {
    q {
      position: relative;

      &:before {
        color: #333;
        content: '\201C';
        font-size: 36px;
        left: -20px;
        position: absolute;
        top: 4px;
      }
    }

    .source {
      left: -1rem;
      margin: 0;
      position: relative;
      text-indent: 0;
    }
  }

  h1.title {
    color: #000;
    font: 700 2rem/1.2em $sans-serif;
    margin: 0 0 1rem 0;
    text-align: center;
    text-transform: none;

    a {
      color: #000;
      font: 700 2rem/1.3em $sans-serif;
      text-decoration: none;
    }

    a:hover {
      color: $red;
    }
  }

  h2, h3, h4 {
    color: #111;
    font-family: $subhead;
    font-size: 1rem;
    font-weight: 800;
    margin: 1.7rem 0 .85rem 0;

    & + img {
      margin-top: 0 !important;
    }
  }

  h4 {
    font-style: italic;
  }

  p {
    font-size: 1rem;
    margin: 0 0 .85rem;
  }

  span.caption {
    color: #BBB;
    font-family: $helvetica;
    font-size: 0.9rem;
  }

  em {
    font-style: italic;
  }

  strong {
    font-weight: 600;
  }

  hr {
    border-color: #ccc;
    border-style: solid;
    margin: 1.7rem 0;
  }

  a {
    color: $red;
    text-decoration: none;

    &:hover {
      color: lighten($red, 10%);
    }

    &:visited {
      color: desaturate(darken($red, 10%), 10%);
    }
  }

  blockquote {
    color: #555;
    font-style: italic;
    margin: 1.7rem 0;
    padding: 0 1rem;

    p {
      color: #555;
      font-style: italic;
    }
  }

  ul {
    list-style-type: disc;
    margin: 0 0 1rem 1.1rem;

    li {
      margin: 0;
      position: relative;
    }
  }

  ol {
    margin: 0 0 1rem 1.1rem;

    li {
      list-style-type: decimal;
      margin: 0;
      position: relative;
    }

    li ol {
      margin-left: 1.4rem;
    }
  }

  dl {
    margin: 1.7rem 0;

    dd {
      margin: 0 0 0 1rem;
    }
  }

  img {
    display: block;
    margin: .85rem auto;
    max-width: 100%;
  }

  iframe {
    max-width: 100%;
  }

  figure {
    max-width: 100%;
  }

  table {
    margin: 1.7rem 0;
    width: 100%;

    tr {
      border-bottom: 1px solid #ddd;
    }

    td, th {
      padding: .25rem;

      &.not-applicable {
        background-color: #ddd;
      }
    }

    th {
      font-family: $subhead;
      font-weight: 800;
      text-align: left;
    }
  }

  .video-container {
    height: 0;
    margin: 1.7rem 0;
    overflow: hidden;
    padding-bottom: 56.25%;
    position: relative;

    iframe, object, embed {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
  }

  .post-footer {
    display: none;
  }

  ol.footnotes {
    font-size: 0.8rem;
    line-height: 1.5rem;

    li {
      margin-top: 0.85rem;
    }
  }

  h2.tag-title {
    margin-bottom: 0;
    color: #999;
    font: 400 1rem/1em $subhead;
    font-style: italic;
  }
}

.post-body {
  a {
    border-bottom: 1px solid #DDD;

    &:hover {
      border-bottom-color: #CCC;
    }
  }
}

.meta-info {
  color: #999;
  margin-bottom: 1rem;
  text-align: center;

  a {
    color: #999;
    display: inline-block;
    font-weight: 400;

    &:hover {
      color: $red;
      text-decoration: none;
    }

    &:visited {
      color: #ccc;
    }
  }

  .post-date {
    margin: 0 auto 0 auto;
  }

  .author {
    margin: 0;
    position: relative;
  }

  .tagged {
    display: none;
    font-family: $sans-serif;
    margin-bottom: .5rem;
    text-transform: uppercase;
  }

  .tags {
    display: none;
    list-style-type: none;
    margin-left: 0;
  }
}

.old img {
  float: none !important;
}

.email-container {
  @include fill-parent();
  margin: 0;
  padding: 0 0 4rem;
  text-align: center;

  input {
    width: 100%;
  }

  input[type=email] {
    margin-bottom: .5rem;
  }
}

#pagination {
  display: inline-block;
  @include fill-parent();
  padding: 0 0 3rem;

  a {
    color: #444;
    font-family: $sans-serif;
    font-size: 1em;
    font-weight: 700;
    padding: 6px 9px;
    text-decoration: none;
    text-transform: uppercase;

    &:hover {
      color: #000;
    }
  }
}

#older-link {
  float: left;
  margin: 0 0 0 0;

  a {
    background: url('/images/arrows.png') 0 13px no-repeat;
    margin: 0 0 0 -3px;
    @include position(relative, 0 0 0 -6px);
  }
}

#newer-link {
  float: right;
  text-align: right;

  a {
    background: url('/images/arrows.png') right -15px no-repeat;
    margin: 0 -3px 0 0;
    @include position(relative, 0 -6px 0 0);
  }
}

footer {
  margin: 0 auto;
}

#footer-container {
  @include clearfix();
  padding: 0 1.5rem;

  .etc {
    display: block;
    margin-bottom: 1rem;

    img.scene {
      max-width: 100%;
    }

    p {
      color: #777;
    }

    a, a:visited {
      color: $red;
      text-decoration: none;

      &:hover {
        color: lighten($red, 10%);
      }
    }

    nav {
      display: inline-block;
      margin: 0;

      ul {
        @include clearfix();
        text-align: center;
        margin: 0;
      }

      li {
        display: inline-block;
        margin-right: 10px;
      }

      li:last-child {
        margin-right: 0;
      }

      li a {
        display: block;
        height: 42px;
        @include hide-text;
        @include transition(0.5s);
        width: 42px;
      }
    }
  }
}

#twitter {
  background: url(<%= asset_path 'twitter.svg' %>) -8px -1px no-repeat;

  &:hover {
    background-position: -8px -48px;
  }
}

#contact {
  background: url(<%= asset_path 'contact.svg' %>) 0 -1px no-repeat;

  &:hover {
    background-position: 0 -47px;
  }
}
